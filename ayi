        "$homeszamlal" -gt "1" -o \
        "$mntszamlal" -gt "1" -o "$optszamlal" -gt "1" -o \
        "$srvszamlal" -gt "1" -o "$tmpszamlal" -gt "1" -o \
        "$usrszamlal" -gt "1" -o "$varszamlal" -gt "1" ]
        then 
            yad --window-icon=icons/magyarch_logo.png --no-escape --image=icons/error.png --title="$TITLE" --buttons-layout=center --text="$ERROR003"
