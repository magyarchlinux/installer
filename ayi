    fi

    # Mount
    # mount $root_part /mnt
    
    # mkdir -p /mnt/boot/efi
    # mount "$bootefi_part" /mnt/boot/efi

    # mkswap "$swap_part"
    # swapon "$swap_part"

    echo $root_part
    partition_type="man_swap_file"

    # if [ "$root_part" != "$NONE" ]
    # then
    #     # mkdir -p /mnt/boot
    #     mount "$root_part" /mnt
    #     echo $root_part
    # fi

    # if [ "$boot_part" != "$NONE" ]
    # then
    #     mkdir -p /mnt/boot
    #     mount "$boot_part" /mnt/boot
    # fi

    # if [ "$bootefi_part" != "$NONE" ]
    # then
    #     mkdir -p /mnt/boot/efi
    #     mount "$bootefi_part" /mnt/boot/efi
    # fi

    # if [ "$home_part" != "$NONE" ]
    # then
