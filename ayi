# Set system language

system_lang() {

    _msg "RUN SYSTEM LANGUAGE FUNCTION"

    lang_list="$(grep -v "#  " /etc/locale.gen | sed 's/#//g' | sed 's/ UTF-8//g' | \
        grep .UTF-8  | tr ' ' '\n' | sort | uniq | tr "\n" "," | sed "s/${LANGUAGE}/^${LANGUAGE}/")"

    sys_lang="$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$MAIN002" \
        --buttons-layout=center --image=icons/language.png \
        --form --item-separator="," \
        --field="$LAN":CB \
        "${lang_list:0:-1}")"
    okcancel=$(echo "$?")
    _msg "Sys_lang gutton: $okcancel"

    _msg "System language: $(echo $sys_lang | cut -d '|' -f1)"

    KEYBOARD_LAYOUT=$(echo "${sys_lang,,}" | sed "s/.utf-8|//" | cut -d '_' -f2)
    
    unset MAIN_LIST

    MAIN_LIST=("false" "$MAIN001" "false" "$MAIN002" "true" "$MAIN003" "false" "$MAIN012" "false" "$MAIN004" \
        "false" "$MAIN006" "false" "$MAIN007" "false" "$MAIN008" \
        "false" "$MAIN009" "false" "$MAIN011" "false" "$MAIN013")
}

# Set keyboard layout

keyboard_set() {

    _msg "RUN KEYBOARD SETTINGS FUNCTION"

    kb_set="$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$MAIN003" \
        --buttons-layout=center --image=icons/keyboard.png \
        --form --item-separator="," \
        --field="$KBL":CBE \
        --field="$KBM":CBE \
        "$(localectl list-x11-keymap-layouts | awk '{ printf ""$0"," }' | sed "s/${KEYBOARD_LAYOUT}/^$KEYBOARD_LAYOUT/")" \
        "$(localectl list-x11-keymap-models | awk '{ printf ""$0"," }' | sed "s/pc105/^pc105/")")"
    okcancel=$(echo "$?")
    _msg "kb_set button: $okcancel"

    _msg "Keyboard layout: $(echo $kb_set | cut -d '|' -f1)"
    _msg "Keyboard modell: $(echo $kb_set | cut -d '|' -f2)"

    setxkbmap $(echo $kb_set | cut -d '|' -f1)

    unset MAIN_LIST
    
    MAIN_LIST=("false" "$MAIN001" "false" "$MAIN002" "false" "$MAIN003" "true" "$MAIN012" "falsee" "$MAIN004" \
        "false" "$MAIN006" "false" "$MAIN007" "false" "$MAIN008" \
        "false" "$MAIN009" "false" "$MAIN011" "false" "$MAIN013")
}

# Set timezone

timezone_set() {

    _msg "RUN TIMEZONE FUNCTION"

    DEFAULT_ZONE="$(awk '{print $1 "," $3 }' /usr/share/zoneinfo/zone.tab | \
        grep "${KEYBOARD_LAYOUT^^}" | sort | awk -F ',' '{print $2}' | cut -d "/" -f1 | sed -n "1p")"

    DEFAULT_SUBZONE="$(awk '{print $1 "," $3 }' /usr/share/zoneinfo/zone.tab | \
        grep "${KEYBOARD_LAYOUT^^}" | sort | awk -F ',' '{print $2}' | cut -d "/" -f2 | sed -n "1p")"

    tzzone_set="$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$MAIN004" \
        --buttons-layout=center --image=icons/location.png \
        --form --item-separator="," \
        --field="$TZZ":CB \
        "$(awk '{print $3}' /usr/share/zoneinfo/zone.tab | grep "/" | cut -d "/" -f1 | sort -ud | tr "\n" "," | \
            sed "s/${DEFAULT_ZONE}/^${DEFAULT_ZONE}/")")"
    okcancel=$(echo "$?")
    _msg "tzzone_set button: $okcancel"

    TZONE=$(echo $tzzone_set | cut -d "|" -f1)
    _msg "Select timezone: $TZONE"
    
    if [ "$DEFAULT_ZONE" = "$(echo "$tzzone_set" | cut -d "|" -f1)" ]
    then
        tzszone_set=$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$MAIN004" \
            --buttons-layout=center --image=icons/location.png \
            --form --item-separator="," \
            --field="$TZSZ":CB \
            "$(awk '{print $3}' /usr/share/zoneinfo/zone.tab | grep "${DEFAULT_ZONE}" | cut -d "/" -f2 | sort | tr "\n" "," |\
                sed "s/${DEFAULT_SUBZONE}/^${DEFAULT_SUBZONE}/")")
        okcancel=$(echo "$?")
        _msg "tzszone_set button: $okcancel"
        _msg "Select subzone0: $(echo tzszone_set | cut -d '|' -f1)"
    else
        tzszone_set=$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$MAIN004" \
            --buttons-layout=center --image=icons/location.png \
            --form --item-separator="," \
            --field="$TZSZ":CB \
            "$(awk '{print $3}' /usr/share/zoneinfo/zone.tab | grep "$(echo "$tzzone_set" | cut -d "|" -f1)" | cut -d "/" -f2 | sort | tr "\n" "," )")
        okcancel=$(echo "$?")
         _msg "tzszone_set button: $okcancel"
        _msg "Select subzone0: $(echo tzszone_set | cut -d '|' -f1)"
        
    fi

    clock="$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$CLCK" \
        --buttons-layout=center --image=icons/clock.png \
        --form --item-separator="," \
        --field="$TIM":CB \
        "^utc,localtime")"
    okcancel=$(echo "$?")
    _msg "Clock button: $okcancel"
    _msg "Select clock set: $(echo $clock | cut -d '|' -f1)"

    unset MAIN_LIST
    
    MAIN_LIST=("false" "$MAIN001" "false" "$MAIN002" "false" "$MAIN003" "false" "$MAIN012" "false" "$MAIN004" \
        "true" "$MAIN006" "false" "$MAIN007" "false" "$MAIN008" \
        "false" "$MAIN009" "false" "$MAIN011" "false" "$MAIN013")
}

# Set hostname

hname() {

    _msg "RUN HOSTNAME FUNCTION"

    hsname="$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$HSNM" \
        --buttons-layout=center --image=network \
        --form --field="$HSNM1" \
        "magyarch" )"

    echo "$?"
    # echo "Select hostname set: $(echo $hsname | cut -d '|' -f1)"

    unset MAIN_LIST 
    MAIN_LIST=("false" "$MAIN001" "false" "$MAIN002" "false" "$MAIN003" "false" "$MAIN012" "false" "$MAIN004" \
        "true" "$MAIN006" "false" "$MAIN007" "false" "$MAIN008" \
        "false" "$MAIN009" "false" "$MAIN011" "false" "$MAIN013")
}


user_root_set() {

    _msg "RUN USER ROOT SET FUNCTION"

    hup=$(yad --window-icon=icons/magyarch_logo.png --no-escape --width=400 --center --title="$TITLE" --text="$MAIN006" \
        --buttons-layout=center --image=icons/password.png \
        --form  --separator=";" \
        --field="$HSNM1" \
        --field="$URSET001" \
        --field="$URSET002":H \
        --field="$URSET003":H \
        --field="$URSET004":H \
        --field="$URSET005":H \
        "magyarch")
    okcancel=$(echo "$?")
    _msg "hup button: $okcancel"

    IFS=";"
    pass_check $hup

    unset MAIN_LIST

    MAIN_LIST=("false" "$MAIN001" "false" "$MAIN002" "false" "$MAIN003" "false" "$MAIN012" "false" "$MAIN004" \
        "false" "$MAIN006" "true" "$MAIN007" "false" "$MAIN008" \
        "false" "$MAIN009" "false" "$MAIN011" "false" "$MAIN013")
}


# Check password
pass_check() {
    IFS=";"
    _msg "RUN PASS CHECK FUNCTION"

    hsname=$1
    user_name=${2,,}
    userpass1=$3
    userpass2=$4
    rootpass1=$5
    rootpass2=$6


    if [ "$userpass1" != "$userpass2" ]
    then
        yad --window-icon=icons/magyarch_logo.png --no-escape --image=icons/error.png --title="$TITLE"  --buttons-layout=center --text="$ERR_USER_PASS"
        _msg "Not same user password"
        user_root_set
        return 1
    elif [ "$rootpass1" != "$rootpass2" ]
    then
        yad --window-icon=icons/magyarch_logo.png --no-escape --image=icons/error.png --title="$TITLE" --buttons-layout=center --text="$ERR_ROOT_PASS"
        _msg "Not same root password"
        user_root_set
        return 1
    elif [ "$rootpass1" == "" -o "$userpass1" == "" ]
    then
        yad --window-icon=icons/magyarch_logo.png --no-escape --image=icons/error.png --title="$TITLE"  --buttons-layout=center --text="$ERR_NO_PASS"
        _msg "Not password"
        user_root_set
        return 1
    elif [ "$hsname" == "" ]
    then
        yad --window-icon=icons/magyarch_logo.png --no-escape --image=icons/error.png --title="$TITLE"  --buttons-layout=center --text="$ERR_NO_HOSTNAME"
        _msg "Not hostnamename"
        user_root_set
        return 1
    elif [ "$user_name" == "" ]
    then
        yad --window-icon=icons/magyarch_logo.png --no-escape --image=icons/error.png --title="$TITLE"  --buttons-layout=center --text="$ERR_NO_USERNAME"
        _msg "Not username"
        user_root_set
        return 1

    fi

    _msg "Hostname: $hsname username: $user_name"
    IFS=$OLDIFS
}


